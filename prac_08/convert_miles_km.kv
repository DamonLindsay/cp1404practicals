BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        TextInput:
            id: user_input
            text: ""
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.25
            Button:
                text: "Up"
                on_press: app.handle_increment(1)
            Button:
                text: "Down"
                on_press: app.handle_increment(-1)
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "Convert miles to km"
            on_press: app.handle_update()
    BoxLayout:
        orientation: "vertical"
        Label:
            text: app.message