BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        TextInput:
            id: user_input
            text: ""
            on_text: app.handle_update()
        BoxLayout:
            orientation: "vertical"
            size_hint_x: 0.25
            Button:
                text: "Up"
                on_press: app.handle_increment(1.0)
            Button:
                text: "Down"
                on_press: app.handle_increment(-1.0)
